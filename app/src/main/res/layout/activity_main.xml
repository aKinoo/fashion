<?xml version="1.0" encoding="utf-8"?>
<!-- v4 変えないで！-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.fashion.MainActivity"
    android:background="#FFFFFF">

    <!-- メイン画面　-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context=".MainActivity">


<!--左半分-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
<!--上半分-->

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="この後の予定は...？"
                        android:textSize="35sp"
                        android:id="@+id/planTitle"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="予定"
                        android:textSize="25sp"
                        android:id="@+id/plans"
                        android:textIsSelectable="false" />
                </LinearLayout>

                <!--下半分-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >
                    <!--上半分-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp">

                            <NumberPicker
                                android:id="@+id/numberPicker0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="月"
                                android:textSize="20sp"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"/>

                            <NumberPicker
                                android:id="@+id/numberPicker1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="日"
                                android:textSize="20sp"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"/>
                            <NumberPicker
                                android:id="@+id/numberPicker2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="："
                                android:textSize="20pt"
                                android:layout_marginTop="@dimen/activity_horizontal_margin"/>
                            <NumberPicker
                                android:id="@+id/numberPicker3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--下半分-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20dp">
                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="アラームセット"
                                android:textSize="20dp"
                                android:id="@+id/setAlarm" />

                            <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="アラーム解除"
                                android:textSize="20dp"
                                android:id="@+id/deleteAlarm" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:context="com.wacode.yuki.day1.MainActivity">

                <AnalogClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/analogClock"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="40dp"/>


                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:timeZone="Asia/Tokyo"
                    android:format24Hour="yyyy/MM/dd"
                    android:format12Hour="yyyy/MM/dd"
                    android:layout_gravity="center_horizontal"
                    />

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:timeZone="GMT+900"
                    android:format24Hour="HH:mm:ss"
                    android:format12Hour="hh:mm:ss"
                    android:layout_gravity="center_horizontal"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="授業"
                    android:textSize="20sp"
                    android:id="@+id/textView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:text="出発時間"
                    android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_horizontal">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="#9baaaaaa"
                    android:drawSelectorOnTop="true"
                    android:text="Spinner" />

                <TextView
                    android:id="@+id/text_view"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:textColor="@color/HoseiOrange"
                    android:textSize="30sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="title"
                    android:id="@+id/title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="25sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@+id/title"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="dateLabel0"
                        android:id="@+id/dateLabel0"
                        android:layout_alignBottom="@+id/linearLayout0"
                        android:layout_alignEnd="@+id/title"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="telop0"
                        android:id="@+id/telop0"
                        android:textSize="25sp"/>

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width = "50dp"
                        android:layout_height = "31dp"
                        android:id = "@+id/image0" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="maxCelsius0"
                        android:id="@+id/maxCelsius0"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="minCelsius0"
                        android:id="@+id/minCelsius0"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="25sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <!-- スワイプメニューの設定 -->
    <!-- NavigationDrawer -->
    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#808080"
        android:orientation="vertical">

        <!-- コーデ画面へのボタン -->
        <Button
            android:id="@+id/drawer_button1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/drawer_show_fashion"/>
        <!-- 過去のコーデ画面へのボタン -->
        <Button
            android:id="@+id/drawer_past_fashion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/drawer_past_fashion"/>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
